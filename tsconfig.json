{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "CommonJS",
    "lib": ["ES2021"],
    "sourceMap": true,
    "outDir": "./lib",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "files": [
    "examples/CodedPHY/advertising.ts",
    "examples/CodedPHY/scanning.ts",
    "examples/advertising.ts",
    "examples/hci-simple.ts",
    "examples/le-conn-central.ts",
    "examples/le-conn-peripheral.ts",
    "examples/le-encrypt.ts",
    "examples/le-random.ts",
    "examples/le-scan-gap.ts",
    "examples/le-scan-hci-ext.ts",
    "examples/le-scan-hci.ts",
    "test/index.ts",
  ]
}
