{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "CommonJS",
    "lib": ["ES2021"],
    "sourceMap": true,
    "outDir": "./lib",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
